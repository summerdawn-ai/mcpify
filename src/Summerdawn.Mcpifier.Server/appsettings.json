// Note: To make the server publishable as a standalone executable, this 
// appsettings.json file is configured to be an _embedded resource_, not content.
{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:5157"
      },
      "Https": {
        "Url": "https://0.0.0.0:7025"
      }
    }
  },
  "Mcpifier": {
    "Rest": {
      "DefaultHeaders": {
        "User-Agent": "Mcpifier/1.0"
      },
      "ForwardedHeaders": {
        "Authorization": true
      }
    },
    "ServerInfo": {
      "Name": "summerdawn-mcpifier",
      "Title": "Summerdawn Mcpifier MCP-to-REST Gateway",
      "Version": "1.0.0"
    },
    "Authorization": {
      "RequireAuthorization": false
    }
  }
}
